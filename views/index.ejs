<!DOCTYPE html>
<html>
<head>
  <title>Twitter Analysis</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Twitter Sentiment Analysis</a>
    </div>
  </nav>

  <!-- Form Section -->
  <div class="container my-4">
    <h2 class="text-center">Twitter Search Form</h2>
    <form action="/tweets/search" method="POST" class="p-4 border rounded bg-light">
      <!-- <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" name="location" class="form-control">
      </div> -->

      <div class="mb-3">
        <label for="minLikes" class="form-label">Minimum Likes:</label>
        <input type="number" id="minLikes" name="minLikes" class="form-control">
      </div>

      <div class="mb-3">
        <label for="minRetweets" class="form-label">Minimum Retweets:</label>
        <input type="number" id="minRetweets" name="minRetweets" class="form-control">
      </div>

      <div class="mb-3">
        <label for="sentiment" class="form-label">Sentiment:</label>
        <select id="sentiment" name="sentiment" class="form-select">
          <option value="positive">Positive</option>
          <option value="negative">Negative</option>
          <option value="both">Both</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-100">Search</button>
    </form>
  </div>
</body>
</html>
